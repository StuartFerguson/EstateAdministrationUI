@model EstateAdministrationUI.Areas.Estate.Models.EstateViewModel
@{
    ViewBag.Title = "Estate Details";
    Layout = "~/Areas/Estate/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <div class="card o-hidden border-0 shadow-sm my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-estatedetails-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">My Estate</h1>
                            </div>
                            <form id="creatEstateForm" asp-action="ManageEstate" asp-area="Estate" asp-controller="Estate" method="post" class="user">
                                <div class="form-group">
                                    <label asp-for="EstateName" class="control-label">Estate Name</label>
                                    <input asp-for="EstateName" class="form-control form-control-user" placeholder="Estate Name" required autofocus />
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block"><i class="fa fa-plus"></i> Update Estate</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>